@import './Vars.styl'
*
  padding 0
  margin 0
  box-sizing border-box
  font-family var(--font-primary)
html
  font-size 62.5%
h1
  color colorOne
a
 text-decoration none
.wrapper
  max-width 1200px
  margin 0 auto
.btn
  padding 10px 20px
  min-height: 40px
  display: inline-flex
  align-items: center
  justify-content: center
  background: white
  border solid 2px transparent
  cursor pointer
.btn-primary
  background colorOne
  color: white
  &:hover
    border-color colorOne
.Main
  min-height calc(100vh - 130px)